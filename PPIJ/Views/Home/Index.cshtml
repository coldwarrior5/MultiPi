    <section id="section-contact" class="section appear clearfix">
        <div class="container">

            <div class="row mar-bot40">
                <div class="col-md-offset-3 col-md-6">
                    <div class="section-header">
                        <h2 class="section-heading animated" data-animation="bounceInUp">Kontaktirajte nas</h2>
                        <p>Imate li pitanja, komentare, prijedloge ili ste uočili neku grešku? Pošaljite nam e-mail.</p>
                    </div>
                </div>
            </div>
            <div class="row">
@using (Ajax.BeginForm("Message", "Home", new AjaxOptions { HttpMethod = "post", UpdateTargetId = "sendMessage", OnSuccess = "Clear(\"myPost\")" }, new { id = "myPost" }))
{
                <div class="col-md-8 col-md-offset-2">
                    <div class="cform" id="contact-form">
                        <div id="sendMessage"></div>
                            <div class="form-group">
                                <label for="name">Ime i prezime</label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Ime i prezime", style = "margin-bottom: 10px;" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger", style = "margin-bottom: 10px;" })
                            </div>
                            <div class="form-group">
                                <label for="email">E-mail adresa</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mail adresa", style = "margin-bottom: 10px;" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", style = "margin-bottom: 10px;" })
                            </div>
                            <div class="test-form-group">
                                @Html.TextBoxFor(m => m.TestEmail, new { id = "test_email" })
                            </div>
                            <div class="form-group">
                                <label for="subject">Naslov</label>
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Naslov", style = "margin-bottom: 10px;" })
                                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger", style = "margin-bottom: 10px;" })
                            </div>
                            <div class="form-group">
                                <label for="message">Poruka</label>
                                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", rows = 10, columns = 40, placeholder = "Poruka", style = "margin-bottom: 10px;" })                                
                                @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger", style = "margin-bottom: 10px;" })
                            </div>
                            <button type="submit" class="btn btn-theme pull-left">POŠALJI</button>
                            <button style="margin-left:15px" class="btn btn-theme pull-left" type="reset">Obriši</button>

                    </div>
                </div>
}
