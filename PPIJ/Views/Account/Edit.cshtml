@using Microsoft.AspNet.Identity
@model PPIJ.Models.UserEditModel
@{
    Layout = "~/Views/Shared/_Account.cshtml";
}

<section id="section-featured" class="featured">
    <div class="container">
        <div class="row mar-bot40">
            <div class="col-md-8 col-md-offset-2">

                <div class="align-center">

                    <h2 class="slogan">Upravljačka ploča korisnika @User.Identity.GetUserName()</h2>

                        @using (Html.BeginForm("Edit","Account", FormMethod.Post, new { style = "margin-top:50px" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new {@class = "control-label col-md-4", style = "text-align:right;vertical-align:middle;margin-top:10px" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control", style = "margin-top:10px" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group" >
                                @Html.LabelFor(model => model.OldPassword, new { @class = "col-md-4 control-label", style = "text-align:right;vertical-align:middle;margin-top:10px" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control", style = "margin-top:10px" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NewPassword, new { @class = "col-md-4 control-label", style = "text-align:right;vertical-align:middle;margin-top:10px" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", style = "margin-top:10px" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.NewPasswordConfirm, new { @class = "col-md-4 control-label", style = "text-align:right;vertical-align:middle;margin-top:10px" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(model => model.NewPasswordConfirm, new { @class = "form-control", style = "margin-top:10px" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div style="float:right;margin-top:15px">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        }

                </div>
            </div>
        </div>
    </div>
</section>