@model PPIJ.Models.LoginModel

@{
    Layout = "~/Views/Shared/_Login_Admin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    @using (Ajax.BeginForm("Login", "Admin", new AjaxOptions { HttpMethod = "post", UpdateTargetId = "result" }))
                    {
                        @Html.AntiForgeryToken()
                            <div id="result"></div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Korisničko ime", style = "margin-bottom: 10px;" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger", style = "margin-bottom: 10px;" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Lozinka", style = "margin-bottom: 10px;" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", style = "margin-bottom: 10px;" })
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <input class="btn btn-primary" style="float:right;margin-top:15px" type="submit" value="Prijava" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>
