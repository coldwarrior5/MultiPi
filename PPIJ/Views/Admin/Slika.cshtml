    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Pictures table</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <table class="table">
                    <tr>
                        <th>#</th>
                        <th>Slika</th>
                        <th>Actions</th>
                    </tr>
                    @foreach (slika s in Model.Pictures)
                    {
                        <tr>
                            <td style="width: 10%;">@s.id_slika</td>
                            <td>@s.slika1</td>
                            <td>
                                <a href="@Url.Action("SlikaEdit", "Admin", new {id = s.id_slika})">Edit</a> |
                                <a href="@Url.Action("SlikaInsert", "Admin")">Add new</a> |
                                <a href="@Url.Action("SlikaRemove", "Admin", new {id = s.id_slika})">Remove</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
            </div>
        </div>
            <!-- /#page-wrapper -->
        </div>
        <!-- /#wrapper -->
        <!-- jQuery -->
        <script src="~/Content/bower_components/jquery/dist/jquery.min.js"></script>

