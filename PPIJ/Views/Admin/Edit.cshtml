@using Microsoft.AspNet.Identity
@model PPIJ.Models.UserEditModel
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div id="wrapper">
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="index.html">SB Admin v2.0</a>
        </div>
        <!-- /.navbar-header -->
        <ul class="nav navbar-top-links navbar-right">
            
            <li>
                <a href="@Url.Action("Index", "Admin")"><i class="fa fa-arrow-left"></i> Return</a>
            </li>
            <!-- /.dropdown -->
            <li>
                @using (Html.BeginForm("LogOff", "Admin", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                }
                <!-- /.dropdown-user -->
            </li>
            <!-- /.dropdown -->
        </ul>

    </nav>
    <section id="section-featured" class="featured">
        <div class="container">
            <div class="row mar-bot40">
                <div class="col-md-8 col-md-offset-2">

                    <div class="align-center">

                        <h2 class="slogan">Upravljačka ploča administratora @User.Identity.GetUserName()</h2>

                        @using (Html.BeginForm("EditAccount", "Admin", FormMethod.Post, new { style = "margin-top:50px" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4", style = "text-align:right;vertical-align:middle;margin-top:10px" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", style = "margin-top:10px" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.OldPassword, new { @class = "col-md-4 control-label", style = "text-align:right;vertical-align:middle;margin-top:10px" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control", style = "margin-top:10px" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NewPassword, new { @class = "col-md-4 control-label", style = "text-align:right;vertical-align:middle;margin-top:10px" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", style = "margin-top:10px" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.NewPasswordConfirm, new { @class = "col-md-4 control-label", style = "text-align:right;vertical-align:middle;margin-top:10px" })
                                <div class="col-md-8">
                                    @Html.PasswordFor(model => model.NewPasswordConfirm, new { @class = "form-control", style = "margin-top:10px" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div style="float:right;margin-top:15px">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- /#wrapper -->
<!-- jQuery -->
<script src="~/Content/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/Content/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/Content/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- Morris Charts JavaScript -->
<script src="~/Content/bower_components/raphael/raphael-min.js"></script>
<script src="~/Content/bower_components/morrisjs/morris.min.js"></script>
<script src="~/Scripts/morris-data.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/Scripts/sb-admin-2.js"></script>